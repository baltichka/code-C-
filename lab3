// Задача: ввести с консоли строку символов произвольной длины (до 80). Поменять в строке все маленькие символы "a"
 и "b" на заглавные и вывести полученную строку.

#include <stdio.h>
#include <string.h>
#include <ctype.h>

int main() {
    char input[81]; // массив для хранения введенной строки
    printf("Введите строку (до 80 символов): ");
    fgets(input, sizeof(input), stdin); // считываем строку из консоли

// проверка 
  if (strlen(input) <= 80) {
    // заменяем все маленькие буквы 'a' и 'b' на заглавные
    for (int i = 0; i < strlen(input); i++) {
        if (input[i] == 'a' || input[i] == 'b') {
            input[i] = toupper(input[i]);
        }
    }

    // выводим преобразованную строку
    printf("Преобразованная строка: %s\n", input);
} else {
  printf("Введенная строка превышает 80 символов.\n");
}
    
    return 0;
}
