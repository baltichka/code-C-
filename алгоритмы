#include <stdio.h>

#define ISBIT(n,x) (((01<<(n))&(x))?1:0)

int popcount ( int size, char *target)
{
 int c;
  c=0;
 // ................
 return c; 
}

void outbyte( char byte)
{
  int i;
  for (i=0; i<8; i++)
//  for ( i=7; i>-1; i-- )
    putchar(ISBIT((i),byte)?'1':'0');
  putchar(' ');
  fflush(stdout);
}

void outbytes( int n, char *byte)
{ 
  int i;
 for (i=0; i<n; i++)
   outbyte(byte[i]);
}

int main()
{
 double t=512.0;
   outbytes(6,"Hello");
   printf("\n");
   outbytes(8,(char *)&t);
   printf("\n");
     
 return 0;
}
