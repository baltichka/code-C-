// Задание: объявить массив данных типа double размером 3x3. ввести с консоли его значения, вывести сумму его элементов, расположенных на главной диагонали и сумму элементов, расположенных на побочной диагонали.
// объявить массив данных типа int размером 2x2. ввести с консоли его значения, вывести квадрат данной матрицы.

#include <stdio.h>

int main() {
    // Объявляем массив данных типа double размером 3 на 3
    double matrix[3][3];
    
    // Вводим значения массива с консоли
    printf("Введите значения для массива типа double размером 3 на 3:\n");
    for (int i = 0; i < 3; i++) {
        for (int j = 0; j < 3; j++) {
            scanf("%lf", &matrix[i][j]);
        }
    }

    // Выводим полученные значения массива
    printf("Введенные значения массива типа double:\n");
    for (int i = 0; i < 3; i++) {
        for (int j = 0; j < 3; j++) {
            printf("%lf\t", matrix[i][j]);
        }
        printf("\n");
    }

    // Вычисляем и выводим сумму элементов, расположенных на главной диагонали
    double sumMainDiagonal = 0.0;
    for (int i = 0; i < 3; i++) {
        sumMainDiagonal += matrix[i][i];
    }
    printf("Сумма элементов на главной диагонали: %lf\n", sumMainDiagonal);

    // Вычисляем и выводим сумму элементов, расположенных на побочной диагонали
    double sumSecondaryDiagonal = 0.0;
    for (int i = 0; i < 3; i++) {
        sumSecondaryDiagonal += matrix[i][2 - i];
    }
    printf("Сумма элементов на побочной диагонали: %lf\n", sumSecondaryDiagonal);

    // Объявляем массив данных типа int размером 2 на 2
    int intMatrix[2][2];

    // Вводим значения массива int с консоли
    printf("Введите значения для массива типа int размером 2 на 2:\n");
    for (int i = 0; i < 2; i++) {
        for (int j = 0; j < 2; j++) {
            scanf("%d", &intMatrix[i][j]);
        }
    }

    // Выводим полученные значения массива типа int
    printf("Введенные значения массива типа int:\n");
    for (int i = 0; i < 2; i++) {
        for (int j = 0; j < 2; j++) {
            printf("%d\t", intMatrix[i][j]);
        }
        printf("\n");
    }

    // Выводим квадрат данной матрицы
    printf("Квадрат данной матрицы:\n");
    for (int i = 0; i < 2; i++) {
        for (int j = 0; j < 2; j++) {
            printf("%d\t", intMatrix[i][j] * intMatrix[i][j]);
        }
        printf("\n");
    }

    return 0;
}
